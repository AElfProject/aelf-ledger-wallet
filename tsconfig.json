{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/constants": ["utils/constants.ts"],
      "@/state/*": ["state/*"],
      "@/state": ["state"],
      "@/utils/*": ["utils/*"],
      "@/utils": ["utils"],
      "@/hooks/*": ["hooks/*"],
      "@/context/*": ["context/*"],
      "@/components/*": ["components/*"],
      "@/pages/*": ["components/pages/*"],
      "@/assets/*": ["assets/*"],
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
